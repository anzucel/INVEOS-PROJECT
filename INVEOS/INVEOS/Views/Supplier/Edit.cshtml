@model INVEOS.Models.Supplier

@{
    ViewBag.Title = "Edit";
}

@if (TempData["categoryEdited"] != null)
{
    <script>
        window.onload = successfulEditAlert();
    </script>
}

@if (TempData["error"] != null)
{
    <script>
        window.onload = errorAlert('@TempData["error"]');
    </script>
}

<link rel="shortcut icon" href="../assets/images/favicon.ico" />
<link rel="stylesheet" href="../assets/css/backend-plugin.min.css">
<link rel="stylesheet" href="../assets/css/backend.css?v=1.0.0">
<link rel="stylesheet" href="/assets/vendor/@@fortawesome\/fontawesome-free/css/all.min.css">
<link rel="stylesheet" href="../assets/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
<link rel="stylesheet" href="../assets/vendor/remixicon/fonts/remixicon.css">

<div class="content-page">
    <div class="container-fluid add-form-list">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Editar categoría</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        @* <form action="page-list-category.html" data-toggle="validator">*@
                        @using (Html.BeginForm("Edit", "Supplier", FormMethod.Post))
                        {
                            <div class="row">
                                <input type="hidden" name="SupplierId" id="SupplierId" value="@Model.SupplierId">
                                <input type="hidden" name="AddressId" id="AddressId" value="@Model.AddressId">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nombre *</label>
                                        <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Correo *</label>
                                        <input type="email" class="form-control" name="Email" id="Email" value="@Model.Email" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Teléfono *</label>
                                        <input type="number" class="form-control" name="Phone" id="Phone" value="@Model.Phone" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Departamento *</label>
                                        <select name="Address.Department" id="Address.Department" class="selectpicker form-control" data-style="py-0">
                                            <option>Guatemala</option>
                                            <option>San Marcos</option>
                                            <option>Retalhuleu</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Municipio *</label>
                                        <select name="Address.Municipality" id="Address.Municipality" class="selectpicker form-control" data-style="py-0">
                                            <option>Guatemala</option>
                                            <option>San Marcos</option>
                                            <option>Retalhuleu</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Zona *</label>
                                        <input type="number" name="Address.Zone" id="Address.Zone" class="form-control" value="@Model.Address.Zone" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Detalle de la dirección *</label>
                                        <textarea class="form-control" rows="2" id="Address.AddressDetail" name="Address.AddressDetail" required>
                                            @Model.Address.AddressDetail
                                        </textarea>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Guardar Cambios</button>
                            <button type="button" class="btn btn-danger" onclick="@("window.location.href='"+ @Url.Action("List", "Supplier") + "'")">Regresar</button>
                            @*</form>*@
                        }

                        @*@if (ViewBag.JavaScriptFunctionn == null)
                        {
                        <script type="text/javascript">
                        @Html.Raw(ViewBag.JavaScriptFunctionn)
                        </script>
                        }*@
                    </div>
                </div>
            </div>
        </div>
        <!-- Page end  -->
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function successfulEditAlert() {
            Swal.fire({
                title: '¡Guardado correctamente!',
                //text: "La categoría ha sido creada exitosamente",
                icon: 'success',
                showCancelButton: false,
                //confirmButtonColor: '#3085d6',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location = "/Supplier/List"
                }
                return false;
            });
        };
    </script>

    <script type="text/javascript">
        function errorAlert(message) {
            Swal.fire(
                'Error',
                message,
                'error'
            )
        };
    </script>
}
