@model IEnumerable<INVEOS.Models.Supplier>

@if (TempData["error"] != null)
{
    <script>
        window.onload = errorAlert('@TempData["error"]');
    </script>
}
else
{
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Lista de Proveedores</h4>
                        @*<p class="mb-0">
                            Create and manage your vendor list, send and receive purchase orders – your online<br>
                            Dashboard is your new back of house.
                        </p>*@
                    </div>
                    <a href="@Url.Action("Add", "Supplier")" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Agregar Proveedor</a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">
                    <table class="data-table table mb-0 tbl-server-info">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data">
                                @*<th>
                                    <div class="checkbox d-inline-block">
                                        <input type="checkbox" class="checkbox-input" id="checkbox1">
                                        <label for="checkbox1" class="mb-0"></label>
                                    </div>
                                </th>*@
                                <th>Empresa</th>
                                <th>Correo</th>
                                <th>Télefono</th>
                                <th>Departamento</th>
                                <th>Municipio</th>
                                <th>Zona</th>
                                <th>Dirección</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="ligth-body">
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                            <div class="checkbox d-inline-block">
                                                <input type="checkbox" class="checkbox-input" id="checkbox2">
                                                <label for="checkbox2" class="mb-0"></label>
                                            </div>
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address.Department)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address.Municipality)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address.Zone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address.AddressDetail)
                                        </td>
                                        <td>

                                        </td>
                                        <td>
                                            @{
                                                string editURL = $"Edit?id={item.SupplierId}";
                                                string detailsURL = $"Details?id={item.SupplierId}";
                                                <div class="d-flex align-items-center list-action">
                                                    <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="View"
                                                       href="@detailsURL"><i class="ri-eye-line mr-0"></i></a>
                                                    <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"
                                                       href="@editURL"><i class="ri-pencil-line mr-0"></i></a>
                                                    <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"
                                                       onclick="deleteAlert(@item.SupplierId)"><i class="ri-delete-bin-line mr-0"></i></a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Page end  -->
    </div>
</div>
}
@section scripts{
    <script type="text/javascript">
        function deleteAlert(id) {
            Swal.fire({
                title: '¿Estás seguro de que deseas eliminar este proveedor?',
                text: "Esta acción no se podría revertir",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Supplier/Delete/" + id,
                        success: function (r) {
                            Swal.fire({
                                //'Deleted!',
                                //'Your file has been deleted.',
                                //'success'
                                title: 'La categoría ha sido eliminada',
                                icon: 'success',
                                showCancelButton: false,
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'Ok'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location = "/Supplier/List"
                                }

                                return false;
                            })
                        }

                        //success: function (r) {
                        //    window.location = "/List"
                        //}
                    });

                    return false;
                }
            });
        };
    </script>

